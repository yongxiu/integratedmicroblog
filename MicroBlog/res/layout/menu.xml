<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:gravity="bottom"
	android:layout_gravity="bottom" android:background="@drawable/menu_bg">
	<ImageButton android:id="@+id/HomeBtn"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:src="@drawable/icon_home" android:background="@color/transparent"
		android:layout_weight="1" />
	<ImageButton android:id="@+id/ShareBtn"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:src="@drawable/icon_share" android:background="@color/transparent"
		android:layout_weight="1" />
	<ImageButton android:id="@+id/MentionsBtn"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:src="@drawable/icon_mentions" android:background="@color/transparent"
		android:layout_weight="1" />
	<ImageButton android:id="@+id/SelfBtn"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:src="@drawable/icon_selfinfo" android:background="@color/transparent"
		android:layout_weight="1" />
	<ImageButton android:id="@+id/AuthorizeBtn"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:src="@drawable/icon_auth" android:background="@color/transparent"
		android:layout_weight="1" />
</LinearLayout>